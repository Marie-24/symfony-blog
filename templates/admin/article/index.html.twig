{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Gestion des articles</h1>
     <p>
        <a href="{{ path('app_admin_article_edit') }}">Édition des articles</a>
    </p>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Auteur</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Catégorie</th>
            <th>Illustration</th>
            <th width="200px"></th>
        </tr>
     {%for article in articles %}
         <tr>
             
                <td>{{ article.id }}</td>
                <td>{{ article.author }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.category }}</td>
                <td>
                    {% if article.image is not null %}
                    <img src="{{ asset('upload/'~article.image) }}" width="100px">
                    {% endif %}
                 </td>
                <td> 
                    <a href="{{ path('app_admin_article_edit', {id: article.id}) }}"
                       class="btn btn-primary">
                     Modifier   
                    </a>
                    <a href="{{ path('app_admin_article_delete', {id:article.id}) }}" class="btn btn-danger">Supprimer</a>
          
                </td>
            
                
                   
            </tr>    
        
        {%endfor%}
      </table>    
{% endblock %}
